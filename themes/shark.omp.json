{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 2,
  "final_space": true,
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "session",
          "style": "powerline",
          "powerline_symbol": "ÓÇ∞",
          "foreground": "#0B1220",
          "background": "#5FD7FF",
          "template": " ü¶à {{ .UserName }} "
        },
        {
          "type": "path",
          "style": "powerline",
          "powerline_symbol": "ÓÇ∞",
          "foreground": "#E6F7FF",
          "background": "#1B4D66",
          "properties": {
            "style": "agnoster",
            "max_depth": 3,
            "home_icon": "~"
          },
          "template": " ÔÅº {{ .Path }} "
        },
        {
          "type": "git",
          "style": "powerline",
          "powerline_symbol": "ÓÇ∞",
          "foreground": "#08120A",
          "background": "#8BD450",
          "template": " {{ .HEAD }}{{ if .Working.Changed }} *{{ end }} "
        },
        {
          "type": "time",
          "style": "powerline",
          "powerline_symbol": "ÓÇ∞",
          "foreground": "#0B1220",
          "background": "#5FD7FF",
          "template": " Ôê∫ {{ .CurrentDate | date \"15:04\" }} "
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "text",
          "style": "plain",
          "foreground": "#5FD7FF",
          "template": "üêü "
        }
      ]
    }
  ]
}
